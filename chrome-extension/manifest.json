{
  "name"   : "slack-chikury",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Twitter等でサボっていることをSlackにチクってもらう拡張です。",
  "icons": {
    "48" : "img/icon48.png",
    "128": "img/icon128.png"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "https://slack.com/"
  ],
  "page_action": {
    "default_icon": {
      "48": "img/icon48.png"
    },
    "default_title": "slack-chikury",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["js/background.js"]
  },
  "content_scripts": [
    {
      "matches": [ "https://twitter.com/*" ],
      "js"     : [ "js/script.js" ],
      "css"    : [ "css/style.css" ],
      "run_at" : "document_start"
    }
  ]
}
